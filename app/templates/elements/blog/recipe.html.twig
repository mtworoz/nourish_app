{% for recipe in recipes %}
    <div class="card mb-3 p-md-3 small">
        <div class="card-body">
            <h4 class="card-title col-12 text-center">{{ recipe.title }}</h4>

            <h5 class="mt-3 ">Składniki odżywcze:</h5>
            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th scope="col">Białka</th>
                        <th scope="col">Tłuszcz</th>
                        <th scope="col">Węglowodany</th>
                        <th scope="col">Kcal</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ recipe.proteins }} g</td>
                        <td>{{ recipe.fats }} g</td>
                        <td>{{ recipe.carbohydrates }} g</td>
                        <td>{{ recipe.totalEnergy }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between">
                <h6 class="d-flex p-0 mt-3">
                    <span>Ilość porcji:</span>
                    <div class="ml-4">
                        + <span class="badge badge-success badge-pill">{{ recipe.servings }}</span> -
                    </div>
                </h6>

                <h6 class="d-flex p-0 mt-3">
                    <span><i class="action-icon fa fa-clock"></i>Czas przygotowania:</span>
                    <div class="ml-4">
                        <span class="badge badge-success badge-pill">{{ recipe.preparationTime|convert_time }} </span>
                    </div>
            </div>

            {# TODO : make badge plus and minus works #}

            <h5 class="pt-3">Lista składników:</h5>
            <ul class="list-group list-group-flush">
                {% for recipeIngredient in recipe.recipeIngredients %}
                    <li class="list-group-item bg-light">
                        {{ recipeIngredient.ingredient.name }} - {{ recipeIngredient.weight }} g
                    </li>
                {% endfor %}
            </ul>

            <p class="mt-3">{{ recipe.instruction | raw }}</p>
        </div>
    </div>
{% endfor %}
