{% extends "base.html.twig" %}

{% block body %}
    {% include 'elements/header.html.twig' %}
    <div class="container">
        <section>
            <div class="feature-posts">
                <a href="single-post.html" class="feature-post-item">
                    <span>Gl√≥wne Kategorie</span>
                </a>
                {% for category in categories|slice(0, 4) %}
                <a href="single-post.html" class="feature-post-item">
                    <img src="{{ asset('build/images/img-1.10f81faa.jpg') }}" class="w-100" alt="">
